<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
  </head>
  <body>
    <!-- User Profile Section -->
    <div class="profile-container">
      <img
        src="/images/pfp/<%= userData.image %>"
        alt="Profile Picture"
        class="profile-picture"
      />
      <div class="full-name"><%= userData.fullname %></div>
      <div class="username">@<%= userData.username %></div>
      <form action="/pfp" method="post" enctype="multipart/form-data">
        <label for="file-input">Upload your profile picture:</label>
        <input
          type="file"
          name="file"
          id="file-input"
          accept="image/*"
          required
        />
        <input type="submit" placeholder="submit" />
        <a href="/logout">Logout</a>
      </form>
    </div>

    <!-- Post Form Section -->
    <div>
      <form
        action="/photos"
        method="post"
        class="post-form"
        enctype="multipart/form-data"
      >
        <div>
          <label for="file-input">Upload Pictures into your gallary:</label>
          <input
            type="file"
            name="file"
            id="file-input"
            accept="image/*"
            required
          />
        </div>

        <div class="form-group">
          <label for="caption-input">Caption:</label>
          <input
            placeholder="enter the caption"
            type="text"
            name="postText"
            id="caption-input"
            required
          />
        </div>

        <div class="form-group">
          <input type="submit" value="Submit" />
        </div>
      </form>
      <div class="container">
        <% userData.posts.forEach((post)=>{ %>

        <div class="card">
          <img class="pimg" src="/images/users/<%= post.image %>" />
          <h1><%=post.postText%></h1>
          <%})%>
        </div>
      </div>
    </div>
  </body>
</html>
